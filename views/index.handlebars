<!doctype html>

<html>
<head>
	<title>My HCI Friends</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/hci-friends.css" rel="stylesheet">  
</head>
<div class="container">
<body>
	<h1>My HCI Friends</h1>

	<form id="addFriendForm" role="form" method="get" action="/add">

<!-- 		<div>
			<h3>Sponge bob</h3>
			<img src="http://lorempixel.com/500/500/people" alt="Lorem Pixel image" class="img-responsive">
			<p>live in a pineapple</p>
			<hr>
		</div> -->
		{{#each friends}}
		<div class="friends" id="{{id}}">
			<a href="#">
				<h3>{{name}}</h3>
			</a>
			<img src="{{imageURL}}" alt="Lorem Pixel image" class="img-responsive">
			<p>{{description}}</p>
			<hr>
		</div>
		{{/each}}
		<h3>Add a friend</h3>
	    <div class="form-group">
	      <label for="name">Name:</label>
	      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
	    </div>
	    <div class="form-group">
	      <label for="description">Description:</label>
	      <input type="text" class="form-control" id="description" placeholder="Description" name="description">
	    </div>
	    <input type="submit" id="submitBtn" class="btn btn-default" value="Add the friend"></input>
	</form>
	<script src="js/jquery-1.11.0.js"></script>
	<!-- Include all compiled plugins (below), or include individual files as needed -->
	<script src="js/bootstrap.js"></script>
	<script src="js/hci-friends.js"></script>
</body>
</div>
</html>
